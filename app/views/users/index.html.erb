<div class="container" style="margin-top: 80px">

  <% if @user_search.name_cont %>
    <h1 class="text-center font-weight-bold"><%= @user_search.name_cont %> の検索結果</h1>
  <% else %>
    <h1 class="text-center font-weight-bold">ユーザー一覧</h1>
  <% end %>

  <%= search_form_for @user_search, url:users_index_path, class: "form-inline" do |f| %>
    <%= f.text_field :name_cont, class: "form-control ml-2 mr-2", type: "search", placeholder: "Search" %>
    <%= f.submit "Search", class: "btn btn-outline-success" %>
  <% end %>
  <hr>


  <% if @re_users.any? %>
    <div class="row">
      <% @re_users.each do |re_user| %>
        <div class="col-lg-3 col-md-3 col-sm-12">
          <div class="card mb-4 shadow-sm">
            <img src="<%= re_user.image_name %>" width="100%" height="auto" style="background-color: lightgrey">
            <div class="card-body">
              <h5 class="card-title"><%= re_user.name %></h5>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to '詳細', profile_path(re_user), :class => 'btn btn-outline-primary' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <% if @user_search.name_cont %>
      <h5 class="text-center font-weight-bold"><%= @user_search.name_cont %> に該当するユーザーはいませんでした</h5>
    <% else %>
      <h5 class="text-center font-weight-bold">ユーザーはいません</h5>
    <% end %>
  <% end %>


  </div>
