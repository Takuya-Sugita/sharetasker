<div class="users-back">
  <div class="users-indi-box">
    <div class="back-image">
      <img src="<%= "/back_images/#{@user.back_image}" %>">
    </div>


    <div class="image-back">
      <div class="user_image">
        <img src="<%= "/user_images/#{@user.image_name}"%>" alt="defa">
      </div>
    </div>
    <%= @user.name %>
    <br>
    <%= @user.email %>
    <br>

    <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
    <% end %>

    <% if @current_user.id != @user.id %>
      <% if @user.followed_by?(@current_user) %>
        <div class="follow">
          <%= link_to("フォロー済", "/relationships/#{@user.id}/destroy", {method: "post"})%>
        </div>
      <% else %>
        <div class="unfollow">
          <%= link_to("フォローする", "/relationships/#{@user.id}/create", {method: "post"})%>
        </div>
      <% end %>
    <% end %>



    <ul class="users-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("チャレンジ中のTASK", "/users/#{@user.id}/likes") %></li>
    </ul>

    <% @user.posts.each do |post| %>
      <%= link_to("/users/#{post.user.id}") do %>
        <div class="post-user">
          <div class="post-user-image">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
          </div>
          <div class="post-user-name">
            <%= post.user.name %>
          </div>
        </div>
      <% end %>

      <div class="posts-index-title">
        -<%= link_to(post.title, "/posts/#{post.id}") %>-
      </div>

      <div class="posts-index-content">
        <p>概要：</p><%= post.content %><br>

      </div>
      <%= post.id %>

    <% end %>
  </div>
</div>
