<div id="profile" class="text-center" style="background-image: url('/assets/sample/sample-bg.jpg');">
  <div class="container-fluid h-100 d-flex flex-column align-items-center justify-content-center">
    <div class="rounded-lg py-2" style="background-color: rgba(255,255,255,0.4)">

      <img class="masthead-avatar mb-5" width="240px" height="240px" src="/assets/sample/sample-user.png" alt="">

      <h1 class="font-weight-bold"><%= @user.name %></h1>
      <% if @user == current_user %>
        <%= link_to '編集', edit_user_registration_path, :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container" style="margin-top: 80px">
  <h1 class="text-center font-weight-bold">投稿TASK</h1>
  <hr>
  <% if @posts.any? %>
    <div class="row">
      <% @posts.each do |re_post| %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card mb-4 shadow-sm">
            <img src="" width="100%" height="225" style="background-color: #1AD027">
            <div class="card-body">
              <h5 class="card-title"><%= re_post.title %></h5>
              <p class="card-text"><%= re_post.content %></p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to '詳細', posts_path(re_post), :class => 'btn btn-sm btn-outline-primary' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h5 class="text-center font-weight-bold">該当TASKはありませんでした</h5>
  <% end %>
</div>


<div class="container" style="margin-top: 80px;margin-bottom: 80px">

  <h1 class="text-center font-weight-bold">チャレンジ中のTASK</h1>
  <hr>
  <% if @user.liked_posts.any? %>
    <div class="row">
      <% @user.liked_posts.each do |post| %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card mb-4 shadow-sm">
            <img src="" width="100%" height="225" style="background-color: #1AD027">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to '詳細', posts_path(post), :class => 'btn btn-sm btn-outline-primary' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h5 class="text-center font-weight-bold">チャレンジ中のTASKはありませんでした</h5>
  <% end %>
</div>